<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="订单编号"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:textSize="15sp"/>

    </LinearLayout>
    <View
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/top_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="商家"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/business_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textSize="15sp"/>

    </LinearLayout>
    <View
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/top_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/total_money_tv"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="订单金额"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total_money"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/total_money_tv"
            android:gravity="left|center"
            android:textColor="@color/red"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/fact_total_money_tv"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_toRightOf="@id/total_money"
            android:text="实际支付"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fact_total_money"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/fact_total_money_tv"
            android:gravity="left|center"
            android:textColor="@color/tab_1"
            android:textSize="15sp"/>


    </RelativeLayout>
    <View
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/top_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="下单时间"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:textColor="@color/tab_1"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/unreg"
            android:layout_width="75dp"
            android:background="@drawable/verify_bg"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="使用"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
    <View
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/top_line" />

</LinearLayout>
